<%= form_with scope: :articles, url: articles_path, local: true do |form| %>
  <h1>
    Criar uma nova postagem
  </h1>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Voltar', articles_path %>